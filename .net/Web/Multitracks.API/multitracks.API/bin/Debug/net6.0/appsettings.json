{
  "ConnectionStrings": {
    "DefaultConnection": "Server=.;Database=MultiTracksDB;Trusted_Connection=True;MultipleActiveResultSets=true;TrustServerCertificate=True"
  },
  

  "Serilog": {
    "Using": [
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": ".\\logs\\webapi-.log",
          "rollingInterval": "Day",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {CorrelationId} {Level:u3} {Username} {Message:lj}{Exception}{NewLine}"
        }
      }
    ],
    "AuditTo": [
      {
        "Name": "MSSqlServer",
        "Args": {
          "connectionString": "DefaultConnection",
          "sinkOptionsSection": {
            "tableName": "AuditLog",
            "autoCreateSqlTable": true,
            "batchPostingLimit": 1000,
            "period": "0.00:00:30"
          },
          "restrictedToMinimumLevel": "Information",
          "columnOptionsSection": {
            "clusteredColumnstoreIndex": false,
            "primaryKeyColumnName": "Id",
            "addStandardColumns": [ "LogEvent" ],
            "removeStandardColumns": [ "Properties" ],
            "timeStamp": {
              "convertToUtc": false
            },
            "additionalColumns": [
              {
                "ColumnName": "RequestBody",
                "DataType": "varchar",
                "DataLength": 500,
                "AllowNull": true
              },
              {
                "ColumnName": "ResponseBody",
                "DataType": "varchar",
                "DataLength": 500,
                "AllowNull": true
              },
              {
                "ColumnName": "RequestPath",
                "DataType": "varchar",
                "DataLength": 500,
                "AllowNull": true
              },
              {
                "ColumnName": "MachineName",
                "DataType": "varchar",
                "DataLength": 500,
                "AllowNull": true
              },
              {
                "ColumnName": "ClientIp",
                "DataType": "varchar",
                "DataLength": 500,
                "AllowNull": true
              },
              {
                "ColumnName": "RequestMethod",
                "DataType": "varchar",
                "DataLength": 500,
                "AllowNull": true
              },
              {
                "ColumnName": "Host",
                "DataType": "varchar",
                "DataLength": 500,
                "AllowNull": true
              },
              {
                "ColumnName": "Protocol",
                "DataType": "varchar",
                "DataLength": 500,
                "AllowNull": true
              },
              {
                "ColumnName": "Scheme",
                "DataType": "varchar",
                "DataLength": 500,
                "AllowNull": true
              }
            ]
          }
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithProcessId",
      "WithThreadId",
      "WithThreadId",
      "WithClientIp",
      "WithClientAgent"
    ]
  },
  "BlobUrl": "https://mtracks.azureedge.net/public/images/artists/cover/512/",
  "Azure": {
    "ResourceGroup": "*****",
    "Account": "*****",
    "Container": "images",
    "ConnectionString": "**********************************"
  },
  "AllowedHosts": "*"
}
